    GPIO.output(22, False)
    
def off7():
    GPIO.output(32, False)
    
def off8():
    GPIO.output(29, False)
    
def sleep(a):
    time.sleep(a*x)

def allon():
    on1()
    on2()
    on3()
    on4()
    on5()
    on6()
    on7()
    on8()
    
def alloff():
    off1()
    off2()
    off3()
    off4()
    off5()
    off6()
    off7()
    off8()
    
    
